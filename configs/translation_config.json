{
  "model": {
    "pretrained_model": "facebook/mbart-large-50",
    "src_lang": "en_XX",
    "tgt_lang": "ro_RO"
  },
  "training": {
    "batch_size": 8,
    "max_epochs": 3,
    "learning_rate": 3e-5,
    "warmup_steps": 500,
    "weight_decay": 0.01,
    "max_grad_norm": 1.0,
    "save_interval": 1,
    "eval_interval": 500,
    "log_interval": 50
  },
  "data": {
    "max_length": 128,
    "train_size": 10000,
    "val_size": 1000,
    "test_size": 1000
  },
  "generation": {
    "max_length": 128,
    "num_beams": 5,
    "length_penalty": 1.0,
    "early_stopping": true
  },
  "output": {
    "output_dir": "checkpoints/translation",
    "log_dir": "logs/translation"
  }
}